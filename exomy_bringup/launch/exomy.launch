<launch>
    <node name="robot" pkg="exomy" type="robot_node.py" respawn="true" output="screen"/>
    <node name="motors" pkg="exomy" type="motor_node.py" respawn="true" output="screen" />
    <node name="joystick" pkg="exomy" type="joystick_node.py" respawn="true" />
    <node name="screen" pkg="exomy" type="screen_node.py" respawn="true" output="screen" />

    <node name="mjpeg_cam_right" pkg="mjpeg_cam" type="mjpeg_cam" output="screen" >
        <param name="device_name" value="/dev/video0" />
        <param name="width" value="640" />
        <param name="height" value="420" />
        <param name="framerate" value="15" />
        <param name="exposure" value="70" />
        <param name="brightness" value="128" />
        <param name="autoexposure" value="true" />
    </node>
    <node name="mjpeg_cam_left" pkg="mjpeg_cam" type="mjpeg_cam" output="screen" >
        <param name="device_name" value="/dev/video1" />
        <param name="width" value="640" />
        <param name="height" value="420" />
        <param name="framerate" value="1" />
        <param name="exposure" value="70" />
        <param name="brightness" value="128" />
        <param name="autoexposure" value="true" />
    </node>
    <node name="web_video_server" pkg="web_video_server" type="web_video_server" />


    <!-- Nodes to run the rover -->
    <node respawn="false" pkg="joy" type="joy_node" name="joy_node">
	<!--param name="autorepeat_rate"   value="1.0"/-->
	<param name="coalesce_interval" value="0.05"/>
    </node>
</launch>
